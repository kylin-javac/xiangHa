<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <include layout="@layout/head1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="2dp"
        android:background="#ccc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="香哈头条" />

    <include
        android:id="@+id/diyigetoutiao"
        layout="@layout/hottitle" />

    <!--<include layout="@layout/hottitle" />-->

    <include
        android:id="@+id/diergetoutiao"
        layout="@layout/hottitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ccc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="人气美食家" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/touxianglin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="精选专题" />

    <include
        android:id="@+id/topfirst"
        layout="@layout/topic_jingxuan" />

    <include
        android:id="@+id/topsecond"
        layout="@layout/topic_jingxuan" />

    <include
        android:id="@+id/topthird"
        layout="@layout/topic_jingxuan" />
</LinearLayout>